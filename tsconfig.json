{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es5", "DOM", "ES2021"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "jquery": ["node_modules/abab"] // this mapping is relative to "baseUrl"
    }
  },
  "include": ["src"]
}
